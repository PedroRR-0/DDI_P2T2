<Window x:Class="aeropuerto.Aeropuerto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tabData="clr-namespace:aeropuerto"
        mc:Ignorable="d"
        FontFamily="Yu Gothic UI"
        Title="Gestión Aeropuerto"  Height="600" Width="1100" Left="350" Top="50">
    <Grid Name="grid">
        <TabControl>
            <TabItem Header="Aviones">
                <tabData:Aviones />
            </TabItem>
            <TabItem Header="Tripulantes">
                <tabData:Tripulantes />
            </TabItem>
            <TabItem Header="Vuelos">
                <tabData:Vuelos/>
            </TabItem>
            <TabItem Header="Pasajeros">
                <tabData:Pasajeros />
            </TabItem>
        </TabControl>
    </Grid>
</Window>

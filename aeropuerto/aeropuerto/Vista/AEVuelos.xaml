<Window x:Class="aeropuerto.Vista.AEVuelos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aeropuerto.Vista"
        mc:Ignorable="d"
        Title="AEVuelos" Height="480" Width="400" Left="500" Top="50">
    <Grid Background="#87CEEB" Margin="0,2,0,-2">
        <Button Content="Aceptar" x:Name="aceptar" Width="100" Height="30" Background="#003366" Foreground="White" BorderBrush="#001a33" BorderThickness="2" HorizontalAlignment="Left" Margin="68,378,0,0" VerticalAlignment="Top" Click="aceptar_Click"/>

        <Button Content="Limpiar" x:Name="limpiar" Width="100" Height="30" Background="#003366" Foreground="White" BorderBrush="#001a33" BorderThickness="2" HorizontalAlignment="Left" Margin="250,378,0,0" VerticalAlignment="Top" Click="limpiar_Click"/>
        <ComboBox HorizontalAlignment="Left" x:Name="idAvion" Margin="190,58,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="es-es" Text="ID AVION:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="27,108,0,0" TextWrapping="Wrap" Text="ORIGEN:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,158,0,0" TextWrapping="Wrap" Text="DESTINO:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,208,0,0" TextWrapping="Wrap" Text="FECHA:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,263,0,0" TextWrapping="Wrap" Text="HORA DE SALIDA:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,313,0,0" TextWrapping="Wrap" Text="HORA DE LLEGADA:" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" x:Name="origen" Margin="190,105,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="25" TextChanged="origen_TextChanged"/>
        <TextBox HorizontalAlignment="Left" x:Name="destino" Margin="190,155,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="25"/>
        <TextBox HorizontalAlignment="Left" x:Name="hora_salida" Margin="190,260,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="25"/>
        <TextBox HorizontalAlignment="Left" x:Name="hora_llegada" Margin="190,310,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Height="25"/>
        <Button Content="Editar" x:Name="editar" Width="100" Height="30" Background="#003366" Foreground="White" BorderBrush="#001a33" BorderThickness="2" HorizontalAlignment="Left" Margin="68,378,0,0" VerticalAlignment="Top" Click="editar_Click"/>
        <DatePicker HorizontalAlignment="Left" x:Name="fecha" Margin="190,204,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" x:Name="idTrayectos" Margin="190,18,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="idAvion_Copiar_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="26,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="ID "/><Run Language="es-es" Text="TRATECTO"/><Run Text=":"/></TextBlock>


    </Grid>
</Window>

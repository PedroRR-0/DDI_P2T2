<UserControl x:Class="traductor.IngEsp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:traductor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Label x:Name="label" Content="Inglés" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="73" Width="127" FontSize="36"/>
        <Button x:Name="btnIngEsp" Content="Español" HorizontalAlignment="Left" Margin="400,0,0,0" VerticalAlignment="Center" Click="Button_Click" FontSize="24" Height="52" Width="149"/>
        <TextBox x:Name="campoIng" HorizontalAlignment="Left" Margin="78,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219" FontSize="20" AutomationProperties.HelpText="Tu palabra en inglés"/>
        <Label x:Name="labelTradEsp" Content="Traducción" HorizontalAlignment="Left" Margin="78,240,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="#FF981919" BorderThickness="2,2,2,2" FontSize="24" Height="56" Width="200"/>
    </Grid>
</UserControl>
